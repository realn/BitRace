<Screen>
    <ItemList>
        <ItemList Margin="50:30">
            <Panel HorAlign="Left" VerAlign="Top" Size="360:40" Color="0.4:0.4:1:0.6">
                <Stack Orientation="Vertical" Margin="10:5">
                    <TextInt Id="pointsDisplay" Format="POINTS: {0}" Value="0" />
                    <TextStr Id="levelDisplay" Format="DIFFICULTY LEVEL: {0}" Value="EASY" />
                </Stack>
            </Panel>
            <TextInt Id="fpsCounter" HorAlign="Right" VerAlign="Top" Format="FPS: {0}" />
            <ProgressBar Id="healthBar" HorAlign="Left" VerAlign="Bottom" Size="200:20" MaxValue="100" Value="50" Color="1:0:0:1" BarColor="1:0:0:0.6" />
        </ItemList>
        <Panel Id="upgradeInfo" ContentHorAlign="Center" ContentVerAlign="Top" Color="1:1:1:0.5" Visible="False">
            <Text Margin="0:40" Text="UPGRADE" Scale="2:2" />
        </Panel>
        <Rect Id="damageInfo" Color="1:0:0:0.5" Visible="False" />
        <Rect Id="healInfo" Color="0:1:0:0.5" Visible="False" />
    </ItemList>
</Screen>
